<div class="container-fluid">
    <div class="category-div">
        <div class="category-header">
            <h1>NexTime</h1>
            <h3>Welcome <span id="user-name">UserName</span></h3>
        </div>
            {{#each categories}}
        <a href="/to-do/category-items/{{this.id}}">
            <div class="category-body">
                <div class="category-item">
                    <div class="category-icon {{this.type_name}}"><img src="/../img/{{this.type_name}}.png">
                    </div>
                    <div class="category-title"><h4>{{this.type}}</h4></div>
                </div>
            </div>
        </a>
            {{/each}}
    </div>
    <div class="list-items-div">
        <div class="category-header">
            <h1>{{currentStatus}}</h1>
            <a href="/to-do"><button>View All Items</button></a>
        </div>
        <div class="category-body">
            <ul>
                {{#each tasks}}
                <li class="list-item {{this.id}}">{{this.task}}<a href=""><button>edit</button></a><button class="item-delete" data-id="{{this.id}}">x</button></li>
                {{/each}}
            </ul>
        <div class="add-btn"><img src="/../img/plus-circle.png"></div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="boxindex">
            <form id="addItem">
                <h4>Add New Task</h4>
                <div class="close-x"><a href="/to-do"><img src="../img/x-symbol.png" alt="task icon" /></a></div>
                <div class="form-group">
                    <label for="task">Task Name:</label>
                    <input type="text" class="form-control" id="task">
                    <br />
                    <div class="form-group">
                        <label for="category">Select Category:</label>
                        <select class="form-control" id="category">
                            <option></option>
                        </select>
                    </div>
                    <br />
                    <label for="body">Notes</label>
                    <textarea class="form-control" rows="10" id="body"></textarea>
                    <br />
                    <button type="submit" class="btn btn-primary btn-lg btn-block submit" id= "add">Submit</button>
                </div>
            </form>
            <div class="back"><a href="/to-do">Back to To-Do List</a></div>
        </div>
    </div>
</div>